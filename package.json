{
  "name": "api-litacka",
  "version": "1.0.0",
  "description": "Simple wrapper for Litacka API",
  "keywords": [
    "api",
    "litacka"
  ],
  "homepage": "https://github.com/lstejskal/api-litacka#readme",
  "bugs": {
    "url": "https://github.com/lstejskal/api-litacka/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lstejskal/api-litacka.git"
  },
  "license": "ISC",
  "author": "Lukas Stejskal",
  "type": "commonjs",
  "main": "app.js",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=dev node --watch index.js",
    "test": "NODE_ENV=test jest",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
