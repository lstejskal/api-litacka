{
  "name": "api-litacka",
  "version": "1.0.0",
  "description": "Simple wrapper for Litacka API",
  "keywords": [
    "api",
    "litacka"
  ],
  "homepage": "https://github.com/lstejskal/api-litacka#readme",
  "bugs": {
    "url": "https://github.com/lstejskal/api-litacka/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lstejskal/api-litacka.git"
  },
  "license": "ISC",
  "author": "Lukas Stejskal",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=dev ts-node index.ts",
    "test": "NODE_ENV=test jest",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest/presets/js-with-ts",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
